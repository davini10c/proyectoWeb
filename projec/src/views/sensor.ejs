<%- include('comunes/header',{titulo:'Sensor'}) %>


<br>
<br>

<div class="container">
    <div class="solid">
        <% const existeMensaje = typeof mensaje !== "undefined" ? true : false; %>

        <% if(existeMensaje){ %>
            <div class="animated fadeOut alert alert-<%= accion %>" role="alert">
                MENSAJE: <%= mensaje %>
            </div>
        <% } %>

        <nav>
            <ul class="nav justify-content-end">

                <li class="nav-item">
                    <a href="/Rol/menuAdministrador" style="color: black">Ménu Principal</a>
                </li>
            </ul>

        </nav>
        <h1 align="center"> Lista de Sensor</h1>
        <p align="center"> Puedes buscar
            Sensores por codigo.
        </p>

        <form action="/Sensor/sensor" method="get">
            <div align="center">
                <div class="col-sm-9">

                    <div class="form-group">
                        <input id="busqueda"
                               type="text"
                               class="form-control"
                               placeholder="Buscar Sensor"

                               name="busqueda">
                    </div>

                </div>
                <div class="col-sm-3">

                    <button class="btn btn-outline-info btn-block btn-buscar"
                            type="submit">Buscar
                    </button>

                </div>
            </div>
        </form>
        <br>

        <div class="" align="center">
            <div class="col-sm-9"></div>
            <div class="col-sm-3">
                <a class="quitar-decoracion" href="/Sensor/crear-sensores">
                    <button class="btn btn-outline-success btn-espaciado btn-block">
                        Asignar Sensor
                    </button>
                </a>
            </div>
        </div>

        <br>

        <table class="table table-striped table-hover animated fadeInUp">
            <caption>Lista de Sensores asignados</caption>
            <thead>
            <tr align="center">
                <!-- th -> table header -->
                <th width="30%">Código</th>


            </tr>
            </thead>
            <!-- tr -> table row -->
            <tbody>
            <% arreglo.forEach((sensor)=>{ %>
                <tr>
                    <!-- td -> table detail -->
                    <td><%= sensor.codigoSensor %></td>


                    <td>
                        <form action="/Sensor/borrar/<%= sensor.id %>"
                              method="post"
                        >
                            <!--<button type="button">Yo no</button>-->
                            <!--<button>Yo si</button>-->
                            <button type="submit"
                                    class="btn btn-outline-danger btn-block btn-espaciado"
                                    onclick="borrar(event)">Eliminar
                            </button>
                        </form>
                        <a class="quitar-decoracion" href="/Sensor/actualizar-sensores/<%= sensor.id %>">
                            <button class="btn btn-outline-info btn-block btn-espaciado"
                                    type="button">
                                Actualizar
                            </button>
                        </a>

                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>


    </div>

</div>
<%- include('comunes/librerias') %>
<%- include('comunes/footer') %>