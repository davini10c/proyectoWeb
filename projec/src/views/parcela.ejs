<%- include('comunes/header',{titulo:'Parcela'}) %>
<br>

<div class="container">
    <div class="solid">

        <nav>
            <ul class="nav justify-content-end">

                <li class="nav-item">
                    <a href="/Parcela/parcelasSuboparcelas" style="color: black">Ménu Parcelas</a>
                </li>

            </ul>

        </nav>
        <% const existeMensaje = typeof mensaje !== "undefined" ? true : false; %>

        <% if(existeMensaje){ %>
            <div class="animated fadeOut alert alert-<%= accion %>" role="alert">
                MENSAJE: <%= mensaje %>
            </div>
        <% } %>

        <br>

        <h1 align="center"> Lista de parcelas</h1>
        <p align="center">Crea, edita, actualiza y busca parcelas. Puedes buscar
            parcelas por codigo.
        </p>


        <form action="/Parcela/Parcela" method="get">
            <div align="center">
                <div class="col-sm-9">

                    <div class="form-group">
                        <input id="busqueda"
                               type="text"
                               class="form-control"
                               placeholder="Buscar Parcela"
                               name="busqueda">
                    </div>

                </div>
                <div class="col-sm-3">

                    <button class="btn btn-outline-info btn-block btn-buscar"
                            type="submit">Buscar
                    </button>

                </div>
            </div>
        </form>
        <br>

        <div align="center">
            <div class="col-sm-9"></div>
            <div class="col-sm-3">
                <a class="quitar-decoracion" href="/Parcela/crear-parcela">
                    <button class="btn btn-outline-success btn-espaciado btn-block">
                        Crear Parcela
                    </button>
                </a>
            </div>
        </div>
        <br>

        <table class="table table-striped table-hover animated fadeInUp">
            <caption>Lista de Parcelas</caption>
            <!-- tr -> table row -->
            <thead>
            <tr align="center">
                <!-- th -> table header -->
                <th width="30%">Código</th>
                <th width="50%">Medidas</th>
                <th width="50%">Acción</th>


            </tr>
            </thead>
            <!-- tr -> table row -->
            <tbody>
            <% arreglo.forEach((parcela)=>{ %>
                <tr align="center">
                    <!-- td -> table detail -->
                    <td><%= parcela.codigo %></td>
                    <td><%= parcela.medidas %></td>


                    <td>
                        <form action="/Parcela/borrar/<%= parcela.id %>"
                              method="post"
                        >
                            <!--<button type="button">Yo no</button>-->
                            <!--<button>Yo si</button>-->
                            <button type="submit"
                                    class="btn btn-outline-danger btn-block btn-espaciado"
                                    onclick="borrar(event)">Eliminar
                            </button>
                        </form>
                        <a class="quitar-decoracion" href="/Parcela/actualizar-parcela/<%= parcela.id %>">
                            <button class="btn btn-outline-info btn-block btn-espaciado"
                                    type="button">
                                Actualizar
                            </button>
                        </a>

                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>


    </div>

</div>

<%- include('comunes/librerias') %>
<%- include('comunes/footer') %>
